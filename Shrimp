void setup(){
  size(1280,800);
  background = loadImage("img/background.png");
  bg = loadImage("img/wallpaper.jpg");
  life = loadImage("img/life.png");
  idle = loadImage("img/idle.png");
  front = loadImage("img/front.png");
  left = loadImage("img/left.png");
  right = loadImage("img/right.png");
  back = loadImage("img/back.png");
  leftBack = loadImage("img/leftBack.png");
  rightBack = loadImage("img/rightBack.png");
  idleWeapon = loadImage("img/idleWeapon.png");
  leftWeapon = loadImage("img/leftWeapon.png");
  rightWeapon = loadImage("img/rightWeapon.png");
  backWeapon = loadImage("img/backWeapon.png");
  enenmy = loadImage("img/snake.png");
  snakeShock = loadImage("img/snakeShock.png");
  egg = loadImage("img/egg.png");
  weapon = loadImage("img/weapon.png");
  shrimp = new Shrimp();
  
  //initiate tiles
  for (int i = 0; i< 52; i++) {
    for (int j = 0; j< 31; j++) {
      tiles[j][i] = new Tile(24.5*i +13, 24.5*j+30);
      switch(tilesRepresentation[j][i]) {
      case 1: //1 is a wall
        tiles[j][i].wall = true;
        break;
      case 0: // 0 is a dot
        tiles[j][i].dot = true;
        break;
      case 8: // 8 is a big dot
        tiles[j][i].bigDot = true;
        break;
      case 6://6 is a blank space
        tiles[j][i].eaten = true;
        break;
      }
    }
  }

}
void draw(){
  image(background,0,0);

  for (int i = 0; i< 52; i++) {
    for (int j = 0; j< 31; j++) {
      tiles[j][i].show();
    }
  }
    
  shrimp.show();
  shrimp.move();
  
  //snake.show();
  //snake.move();
  
  
  
  //route design
  for(int i=0; i<=1280; i+=10){
    ellipse(i, 780, 1, 1);
  }
}


void keyPressed(){ //controls for shrimp//controls for shrimp
  if(key==CODED){
    switch(keyCode){
      case LEFT:
      leftState = true;
      shrimp.turnTo = new PVector(-1, 0);
      shrimp.turn = true;
      leftState = true;
      break;
      case RIGHT:
      rightState = true;
      shrimp.turnTo = new PVector(1, 0);
      shrimp.turn = true;
      rightState = true;
      break;
      case UP:
      upState = true;
      shrimp.turnTo = new PVector(0, -1);
      shrimp.turn = true;
      upState = true;
      case DOWN:
      downState = true;
      shrimp.turnTo = new PVector(0, 1);
      shrimp.turn = true;
      downState = true;
      break;
    }
  }else if(key == 'r'){
    //gameState = GAME_OVER;
  }
}

void keyReleased(){
  if(key==CODED){
    switch(keyCode){
      case LEFT:
      leftState = false;
      break;
      case RIGHT:
      rightState = false;
      break;
      case UP:
      upState = false;
      case DOWN:
      downState = false;
      break;
    }
  }
}
